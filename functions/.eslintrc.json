{
    "extends" : "airbnb-base",
    "plugins": ["import"],
    "env": {
        "commonjs": true,
        "es6": false,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "complexity": ["error", 2],
        "linebreak-style": 0,
        "no-console": "off",
        "comma-dangle": ["error", "never"],
        "func-names": 0,
        "import/no-dynamic-require": 0,
        "import/no-unresolved": 0
    }
}
